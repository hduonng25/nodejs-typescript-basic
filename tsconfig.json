{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonJS",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "strict": true,
        "target": "ES2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*.json", "src/**/*.ts"],
    "exclude": ["node_modules", "build", "**/*.spec.ts"],
    "name": "tsconfig",
    "version": "1.0.0",
    "author": "hduong",
    "license": "MIT",
    "private": true,
    "publishConfig": {
        "access": "public"
    },
    "display": "Packages"
}
